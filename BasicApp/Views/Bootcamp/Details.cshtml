@model Bootcamp

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mt-1">@Model.Title</h1>
            <img src="~/img/@Model.ImageUrl" alt="" class="img-fluid mb-5">
            <p class="card-title">@Model.Description</p>
            <div>
                @if (Model.tag != null)
                {
                    @foreach (var tag in Model.tag)
                    {
                        <span class="bag=dge bg-warning">@tag</span>
                    }} mvc 
            </div>
            <p class="lead">@Model.Instructor</p>
        </div>
    </div>
</div>