@model IEnumerable<Teacher>

<h2>Teacher List</h2>
<hr>
<p>
    <a href="/Teacher/Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.TeacherId)</th>
            <th>@Html.DisplayNameFor(m => m.TeacherName)</th>
            <th>@Html.DisplayNameFor(m => m.TeacherSurname)</th>
            <th>@Html.DisplayNameFor(m => m.HireDate)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => teacher
        .Teacher
        Id)</td>
                <td>@Html.DisplayFor(modelItem => teacher
        .Teacher
        Name)</td>
                <td>@Html.DisplayFor(modelItem => teacher
        .Teacher
        Surname)</td>
                <td>
                    <a asp-controller="Teacher
        " asp-action="Edit" asp-route-id="@teacher
        .Teacher
        Id"
                        class="btn btn-primary">Edit</a>

                    <a asp-controller="Teacher
        " asp-action="Delete" asp-route-id="@teacher
        .Teacher
        Id"
                        class="btn btn-danger">Delete</a>

                </td>
            </tr>

        }
    </tbody>

</table>