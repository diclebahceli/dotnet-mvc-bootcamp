@model Student


<p>
    <b>@Model.StudentName @Model.StudentSurname</b> do you want to delete this student?

<form action="Delete" method="post">
    <input type="hidden" asp-for=@Model.StudentId />
    <button type="submit" class="btn btn-danger"> Yes </button>
    <a asp-action="Index" class="btn btn-primary"> No </a>
</form>
</p>