@model IEnumerable<Product>

<table class="table tabe-ordered table-stripped">
    <thead>
        <tr>
            <th style="width: 100px;">
                @Html.DisplayNameFor(m => m.ProductId)
            </th>
            <th style="width: 100px;">
                @Html.DisplayNameFor(m => m.Image)
            </th>
            <th style="width: 100px;">
                @Html.DisplayNameFor(m => m.BookName)
            </th>
            <th style="width: 100px;">
                @Html.DisplayNameFor(m => m.PageCount)
            </th>
            <th style="width: 160px;">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in @Model)
        {
            <tr>
                <td>@book.ProductId</td>
                <td>@book.BookName</td>
                <td>@book.PageCount</td>
                <td>
                    <imag src="~/image/@book.Image" class="image-fluid" alt=""></imag>
                </td>
                <a href="" class="btn btn-primary">Edit</a>
                <a href="" class="btn btn-danger">Delete</a>


            </tr>
        }
    </tbody>
</table>